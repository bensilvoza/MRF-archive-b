			<h2 class="text-center mt-3">Create Request</h2>
			<div class="requestor-hr">
				<hr />
			</div>

			<form action="/requestor-create" method="post" autocomplete="off">
				<div class="container">
					<div class="row justify-content-end mt-4">
						<div class="col-md-7 requestor-create-padding">
							<% if (emptyFields){ %>

							<div
								class="alert alert-danger alert-dismissible fade show"
								role="alert"
							>
								Only the remarks field is optional
								<button
									type="button"
									class="btn-close"
									data-bs-dismiss="alert"
									aria-label="Close"
								></button>
							</div>

							<% } %>
						</div>
					</div>

					<div class="row justify-content-end mt-1">
						<div class="col-md-3">
							<h6>
								BU Lead Name
							</h6>
						</div>

						<div class="col-md-7">
							<input readonly class="form-control form-control-lg" type="text"
							name="buLeadName" value="<%= requestorData["Bu lead name"] %>" />
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								BU / SSU
							</h6>
						</div>

						<div class="col-md-7">
							<input readonly class="form-control form-control-lg" type="text"
							name="buSsu" value="<%= requestorData["Bu / ssu"] %>" />
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Section / Department
							</h6>
						</div>

						<div class="col-md-7">
							<input readonly class="form-control form-control-lg" type="text"
							name="sectionDepartment" value="<%= requestorData["Section department"]
							%>" />
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Position Title
							</h6>
						</div>

						<div class="col-md-7">
							<div class="form-group">
								<input
									class="form-control form-control-lg"
									type="text"
									name="positionTitle"
								/>
							</div>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Place of Assignment
							</h6>
						</div>

						<div class="col-md-7">
							<select name="placeAssignment" class="form-control form-control-lg">
								<option>Choose place of assignment...</option>
								<option>Davao</option>
								<option>Madaum</option>
								<option>Paranaque</option>
								<option>Trento</option>
							</select>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Tools Needed
							</h6>
						</div>

						<div class="col-md-7">
							<select name="tools" class="form-control form-control-lg">
								<option>Choose the tools needed...</option>
								<option>PPE</option>
								<option>Laptop</option>
								<option>Desktop</option>
								<option>Office 365 account</option>
							</select>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Breif Description of the Job
							</h6>
						</div>

						<div class="col-md-7">
							<textarea
								class="form-control"
								id="exampleFormControlTextarea1"
								rows="8"
								name="descriptionJob"
							></textarea>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Educational Degree / Certificate or License
							</h6>
						</div>

						<div class="col-md-7">
							<textarea
								class="form-control"
								id="exampleFormControlTextarea1"
								rows="8"
								name="educationalDegree"
							></textarea>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Specific Characteristic / Skills Needed
							</h6>
						</div>

						<div class="col-md-7">
							<textarea
								class="form-control"
								id="exampleFormControlTextarea1"
								rows="8"
								name="specificCharacteristic"
							></textarea>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Type of Employment
							</h6>
						</div>

						<div class="col-md-7">
							<select name="typeEmployment" class="form-control form-control-lg">
								<option>Choose type of employment...</option>
								<option>Full-Time</option>
								<option>Agent Hire / Outsource</option>
								<option>Project-Based</option>
							</select>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Type of Request
							</h6>
						</div>

						<div class="col-md-7">
							<select name="typeRequest" class="form-control form-control-lg">
								<option>Choose type of request...</option>
								<option>Budgeted</option>
								<option>Unbudgeted</option>
							</select>
						</div>
					</div>

					<div class="row justify-content-end mt-4">
						<div class="col-md-3">
							<h6>
								Remarks
							</h6>
						</div>

						<div class="col-md-7">
							<textarea
								class="form-control"
								id="exampleFormControlTextarea1"
								rows="8"
								name="remarks"
							></textarea>
						</div>
					</div>

					<div class="d-inline requestor-submit-btn">
						<button type="submit" class="btn btn-secondary">Submit</button>
					</div>
				</div>
			</form>
		</div>
